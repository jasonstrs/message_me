<div class="container-header-login-page">
    <h1  style="margin-top:0.5em">Welcome to MessageMe - <i>a complete Chat App</i></h1>
    <h4 class="ui large icon header">
    <i class="circular orange power off icon"></i>
    Log in to continue
    </h4>
</div>


<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with url: login_path, class: "ui form" do |form| %>
        <div class="field">
          <%= form.label :username, "Username" %>
          <div class="ui left icon input">
            <%= form.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= form.label :password, "Password" %>
          <div class="ui left icon input">
            <%= form.password_field :password, placeholder: "Password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= form.submit "Login", class: "ui blue submit button orange" %>
      <% end %>
    </div>
    <div class="middle aligned column container-sign-up-login-page">
      <div class="ui big button orange">
        <i class="signup icon"></i>
        Sign Up
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>
